{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "outDir": "./dist",
        "rootDir": "./",
        "noEmit": true,
        "isolatedModules": true,
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "jsx": "react-jsx"
    },
    "include": [
        "server/**/*.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "server.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}